<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF2bb27a"
        android:text="검색필터링"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_grey"
        android:cursorVisible="false"
        android:drawableStart="@drawable/search"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="봉사 제목을 검색해주세요."
        android:padding="10dp"
        android:paddingStart="40dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffebebeb" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="지역으로 검색"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:background="@drawable/btn_open"
                    android:backgroundTint="#FF2bb27a" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/list_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="14dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:background="@color/white"
                    android:text="강남구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="강동구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="강북구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="강서구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="관악구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="광진구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="구로구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="금천구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="노원구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="도봉구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="동대문구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="동작구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="마포구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="서대문구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="서초구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="성동구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="성북구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="송파구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="양천구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="영등포구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="용산구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="은평구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="종로구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="중구"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="중랑구"
                    android:textColor="@color/black" />


            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="#ffebebeb" />

            <LinearLayout
                android:id="@+id/search_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="분야로 검색"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="158dp"
                    android:background="@drawable/btn_open"
                    android:backgroundTint="#FF2bb27a" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/list_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="14dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:background="@color/white"
                    android:text="생활편의지원"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="주거환경"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="상담"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="교육"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="보건의료"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="농어촌 봉사"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="문화체육"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="환경보호"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="행정지원"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="안전·예방"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="공익·인권"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="재해·재난"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="해외봉사"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="멘토"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="자원봉사교육"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="국제행사"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="기타"
                    android:textColor="@color/black" />


            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="#ffebebeb" />

            <LinearLayout
                android:id="@+id/search_volunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="봉사자유형으로 검색"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="88dp"
                    android:background="@drawable/btn_open"
                    android:backgroundTint="#FF2bb27a" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/list_volunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:background="@color/white"
                    android:text="성인가능"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="청소년가능"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="가족가능"
                    android:textColor="@color/black" />

                <Button
                    android:background="@color/white"
                    android:text="공무원가능"
                    android:textColor="@color/black" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="#ffebebeb" />

            <LinearLayout
                android:id="@+id/search_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="기간으로 검색"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:background="@drawable/btn_open"
                    android:backgroundTint="#FF2bb27a" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="23dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/calendar_start"
                    android:layout_width="145dp"
                    android:layout_height="39dp"
                    android:background="@drawable/calendar_background"
                    android:drawableRight="@drawable/btn_open"
                    android:drawableTint="@color/ci_color"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="2018-08-03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="~"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/calendar_end"
                    android:layout_width="145dp"
                    android:layout_height="39dp"
                    android:background="@drawable/calendar_background"
                    android:drawableRight="@drawable/btn_open"
                    android:drawableTint="@color/ci_color"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="2018-08-01" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="#ffebebeb" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
